# Configurações do servidor
NODE_ENV=production
PORT=3000

# Chave secreta para JWT
JWT_SECRET=sua_chave_secreta_jwt
JWT_REFRESH_SECRET=sua_chave_secreta_refresh_jwt
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# Configurações de CORS
CORS_ORIGIN=https://terapiaconect.vercel.app,https://terapiaconect.com.br,https://theraconnect.com.br

# URL da API (para uso interno)
API_URL=https://terapiaconect.onrender.com

# URL do frontend (para emails, links, etc)
FRONTEND_URL=https://terapiaconect.vercel.app

# Configurações do banco de dados (serão substituídas nas plataformas de hospedagem)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/terapiaconect

# OpenAI (opcional)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-3.5-turbo

# Configurações de email (opcional)
SMTP_HOST=
SMTP_PORT=
SMTP_USER=
SMTP_PASS=

# Limite de tamanho de upload
UPLOAD_LIMIT=5mb

# Banco de Dados
DEBUG_PRISMA=false

# Configurações de Admin
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your_admin_password_here
ADMIN_NAME=Administrador

# API Keys
STRIPE_SECRET_KEY=your_stripe_key_here
DYTE_ORGANIZATION_ID=your_dyte_org_id_here
DYTE_API_KEY=your_dyte_api_key_here
DYTE_BASE_URL=https://api.dyte.io/v2
DYTE_AUTH_HEADER=your_dyte_auth_header_here
DAILY_API_KEY=your_daily_api_key_here

# Email
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=user@example.com
EMAIL_PASS=your_email_password_here
EMAIL_FROM=noreply@example.com

# Notificações
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false 